<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent" android:padding="24dp"
        android:layout_height="wrap_content">

        <LinearLayout android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:src="@drawable/bot_list" android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="40dp" android:tag="bot"/>
            <ImageView android:src="@drawable/menu_newgroup" android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="40dp" android:tag="topar"/>
            <ImageView android:src="@drawable/menu_broadcast" android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="40dp" android:tag="channel" />
            <ImageView android:src="@drawable/menu_contacts" android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="40dp" android:tag="contact"/>

        </LinearLayout>


        <EditText android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" android:id="@+id/EditTextId"
            android:textColorHint="#A3A3A3" android:hint="@string/id"
            android:textColor="#4F4F4F"
            android:singleLine="true" android:maxLines="1" android:lines="1"
            android:inputType="text"
            android:imeOptions="actionDone" />

        <TextView android:id="@+id/TextViewStatus" android:visibility="visible"
            android:layout_width="match_parent" android:textSize="19sp"
            android:textColor="@color/primary" android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />

        <TextView android:text="@string/IdHelp" android:textColor="#737373" android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:textSize="18sp" android:gravity="start"
            android:id="@+id/TextViewHint"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>